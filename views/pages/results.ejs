      <div class="center-align fb-button">
        <% if (user) { %>
            <button id="share-results" class="btn waves-effect waves-purple">Share on Facebook!</button>
        <% } %>
      </div>
    </div>
  </main>
  <%- include('../partials/scripts') %>
  <script src="/js/timeline.js"></script>
</body>
</html>
